<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DocManager.MainPage">

    <StackLayout Padding="30,0" Spacing="25">
        <Label Text="" Style="{StaticResource Headline}" SemanticProperties.HeadingLevel="Level1" />

        <Image Source="document.png"
               HeightRequest="185"
               Aspect="AspectFit"
               SemanticProperties.Description="" />

        <Label Text="Хуш омадед"
               Style="{StaticResource Headline}"
               SemanticProperties.HeadingLevel="Level1" />

        <Entry Placeholder="Номи корбар"
               x:Name="UsernameEntry"
               SemanticProperties.Hint="Номи корбарии худро ворид кунед" />

        <Entry Placeholder="Рамз"
               x:Name="PasswordEntry"
               IsPassword="True"
               SemanticProperties.Hint="Рамзи худро ворид кунед" />

        <Button Text="Даромадан"
                Clicked="OnLoginClicked"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Барои ворид шудан клик кунед" />
    </StackLayout>
</ContentPage>

